  map $http_upgrade $connection_upgrade {
      default upgrade;
      ''      close;
  }

  server {
    listen {{getenv "LISTEN_ON"}} proxy_protocol;
    real_ip_header proxy_protocol;

    location /ping {
      access_log off;
      return 200 'ok';
      add_header Content-Type text/plain;
    }

    location / {
      proxy_http_version  1.1;
      proxy_pass http://{{getenv "DESTINATION_HOSTNAME"}}:{{getenv "DESTINATION_PORT"}}/;
      proxy_set_header Host    $host;
      proxy_set_header Upgrade $http_upgrade;
      proxy_set_header X-Forwarded-For $proxy_protocol_addr;
      proxy_set_header Connection $connection_upgrade;

      if ($proxy_protocol_port = 443) {
        set $actual_scheme "https";
      }
      if ($proxy_protocol_port = 80) {
        set $actual_scheme "http";
      }
      proxy_set_header X-Forwarded-Proto $actual_scheme;
    }
  }
